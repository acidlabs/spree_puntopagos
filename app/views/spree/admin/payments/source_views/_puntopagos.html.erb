<dl>
  <dt>token:</dt>
  <dd><%= payment.token %></dd>

  <dt>trx_id:</dt>
  <dd><%= payment.trx_id.to_s %></dd>

  <dt><%= Spree.t(:payment_state) %>:</dt>
  <dd><%= Spree.t(payment.state, :scope => :payment_states, :default => payment.state.capitalize) %></dd>

  <% if payment.respond_to?(:puntopagos_params) and payment.puntopagos_params %>
    <% if payment.puntopagos_params['error'] %>
      <dt>Error:</dt>
      <dd><%= payment.puntopagos_params['error'] %></dd>

    <% else %>
      <dt>Monto:</dt>
      <dd><%= payment.puntopagos_params['monto'] %></dd>

      <dt>Código autorización\:</dt>
      <dd><%= payment.puntopagos_params['codigo_autorizacion'] %></dd>

      <dt>Fecha aprobación:</dt>
      <dd><%= payment.puntopagos_params['fecha_aprobacion'] %></dd>

      <dt>Número operación:</dt>
      <dd><%= payment.puntopagos_params['numero_operacion'] %></dd>
    <% end %>
  <% end %>
</dl>